<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/setting_number_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_setting_number_thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_title_number_thread_download"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/summary_setting_number_thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_summary_number_thread_download"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>